      mounted: function(){

        var players = document.getElementsByTagName('audio')

        function allPause(players, ind) {
          for (let index = 0; index < players.length; index++) {
            const element = players[index]
            if (index !== ind) {
              element.pause()
            }
          }
        }

        for (let index = 0; index < players.length; index++) {
          const element = players[index]
          element.onplay = function(e) {
            allPause(players, index)
          };
        }

